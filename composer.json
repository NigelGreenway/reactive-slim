{
    "name": "nigelgreenway/reactive-slim",
    "description": "A bridge to use SlimPHP within ReactPHP",
    "type": "library",
    "require": {
        "php": "^7.1",
        "react/react": "^0.4",
        "slim/slim": "^3.8"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.2",
        "squizlabs/php_codesniffer": "^2.3",
        "sebastianfeldmann/captainhook": "^2.0"
    },
    "authors": [
        {
            "name": "Nigel Greenway",
            "email": "github@futurepixels.co.uk",
            "homepage": "http://futurepixels.co.uk",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "ReactiveSlim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReactiveSlim\\": "tests"
        }
    },
    "config": {
        "bin-dir": "./bin",
        "sort-packages": true
    },
    "scripts": {
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "clean": "rm -r ./{vendor,bin}"
    }
}
